<h1>Login</h1>


<% if logged_in?%>
	<div>
  	<%= form_for(:session, url:logout_path, method: :delete) do |f| %>
    <%= f.submit "Logout"%>
  	<% end %>
	</div>
<% else %>
	<div>
		<%= form_for(:session, url:login_path) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name  %>
			<%= f.submit "Login"%>
		<% end %>
	</div>
<% end %>