<% if logged_in? %>
<div class="line">
  <div class="inline">
    <div class="building">building<br>道<br>開拓地<br>都市<br>
    <%= current_user.name %></div>
    <div class="trade">貿易関係</div>
  </div>
  <canvas id="map" width="500" height="500"></canvas>
  <% 54.times do |t| %>
      <%= form_tag chats_msg_path, remote: true do %>
        <%= hidden_field_tag :msg, "intersection#{t}" %>
        <%= submit_tag '', class: :intersection %>
      <% end %>
  <% end %>
  <div class="chat">
    <form id="form">
    <input type="text" id="msg">
    <input type="submit" value= "送信">
    </form>
  <ul id="msg_view"></ul>
  </div>
</div>

<div class="info-wrap">
  <div class="info1">info1</div>
  <div class="info2">info2</div>
  <div class="info3">info3</div>
  <div class="info4">info4</div>
</div>
<% else %>

<h1>Login Faild!</h1>
<%= link_to "Retry_Login", login_url %>
<% end %>
